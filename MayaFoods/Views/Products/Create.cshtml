@model MayaFoods.Models.Product

@{
    ViewData["Title"] = "Product - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <h2>Create a New Product</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.Origincountry)
        @Html.EditorFor(model => model.Origincountry)

        @Html.LabelFor(model => model.Cost)
        @Html.EditorFor(model => model.Cost)

        <input type="submit" value="Create" class="btn btn-success" />
    }
}
else
{
    <h2>I'm sorry, but you don't have access to this function.</h2>
}

@Html.ActionLink("Back to Products List", "Index")